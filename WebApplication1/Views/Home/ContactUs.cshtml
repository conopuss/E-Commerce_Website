@model User
@{
	ViewData["Title"] = "ContactUs";
	Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

@if (TempData["success"] != null)
{
	
	<script>
		// Mesaj bölümünü temizle
		document.addEventListener("DOMContentLoaded", function () {
			document.getElementById("Message").value = "";
		});
	</script>
}



<main class="main-wrapper">
	<!-- Start Breadcrumb Area  -->
	<div class="axil-breadcrumb-area">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 col-md-8">
					<div class="inner">
						<ul class="axil-breadcrumb">
							<li class="axil-breadcrumb-item"><a href="/Home">Ana Sayfa</a></li>
							<li class="separator"></li>
							<li class="axil-breadcrumb-item active" aria-current="page">Bize Ulaşın</li>
						</ul>
						<h1 class="title">Bize Ulaşın</h1>
					</div>
				</div>
				<div class="col-lg-6 col-md-4">
					<div class="inner">
						<div class="bradcrumb-thumb">
							<img src="~/resimler/bluzKadin.jpg" width="200px" height="200px" alt="Image">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Breadcrumb Area  -->
	<!-- Start Contact Area  -->
	<div class="axil-contact-page-area axil-section-gap">
		<div class="container">
			<div class="axil-contact-page">
				<div class="row row--30">
					<div class="col-lg-8">
						<div class="contact-form">
							<h3 class="title mb--10">Görüş ve yorumlarını merak ediyoruz</h3>
							<br />


							<form action="@Url.Action("ContactUs", "Home")" method="post">


								<div class="row row--10">

									<div class="col-lg-4">
										<div class="form-group">
											<label for="contact-phone">Telefon <span>*</span></label>
											<input type="text" style="direction:ltr" asp-for="Telephone" id="contact-phone" class="form-control" required>
											<span asp-validation-for="Telephone" class="text-danger"></span>
										</div>
									</div>
									<div class="col-lg-4">
										<div class="form-group">
											<label for="contact-email">E-mail <span>*</span></label>
											<input type="email" style="direction:ltr" asp-for="Email" id="contact-email" class="form-control" required>
											<span asp-validation-for="Email" class="text-danger"></span>
										</div>
									</div>
									<div class="col-8">
										<div class="form-group">
											<label for="contact-message">Mesajınız</label>
											<textarea asp-for="Message" style="direction:ltr" id="Message" cols="1" rows="2" class="form-control"></textarea>
											<span asp-validation-for="Message" class="text-danger"></span>
										</div>
									</div>
									<div class="col-12">

										@Html.ValidationSummary(true)

										<input type="hidden" asp-for="UserID" />
										<input type="hidden" asp-for="Password" />
										<input type="hidden" asp-for="NameSurname" />
										<div class="form-group mb--0">
											<button name="submit" type="submit" id="submit" class="axil-btn btn-bg-primary">Mesaj Gönder</button>
										</div>





									</div>
								</div>
							</form>







						</div>
					</div>



					@await Component.InvokeAsync("Address");

					

				</div>
			</div>
			<!-- Start Google Map Area  -->
			<div class="axil-google-map-wrap axil-section-gap pb--0">
				<div class="mapouter">
					<div class="gmap_canvas">
						<iframe width="1080" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=izmir&t=&z=13&ie=UTF8&iwloc=&output=embed"></iframe>

					</div>
				</div>
			</div>
			<!-- End Google Map Area  -->
		</div>
	</div>
	<!-- End Contact Area  -->
</main>



