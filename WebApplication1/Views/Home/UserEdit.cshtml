@model User

@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<main class="main-wrapper">
    <div class="axil-contact-page-area axil-section-gap">
        <div class="container">
            <div class="axil-contact-page">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="contact-form">
                            <h3 class="title mb--10">KULLANICI BİLGİLERİ GÜNCELLEME FORMU</h3>
                            <form action="@Url.Action("UserEdit","Home")" method="post" id="com-form-login" dir="ltr">
                                @Html.AntiForgeryToken() <!-- Include Anti-Forgery Token -->
                                <div class="row row--10">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="contact-name">Ad Soyad <span>*</span></label>
                                            <input type="text" asp-for="NameSurname" id="contact-name" class="form-control" style="direction: ltr;" maxlength="100" required />
                                        </div>
                                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="contact-phone">Telefon <span>*</span></label>
                                            <input type="text" asp-for="Telephone" id="contact-phone" class="form-control" style="direction: ltr;" />
                                            <span asp-validation-for="Telephone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="contact-email">E-mail <span>*</span></label>
                                            <input type="email" asp-for="Email" id="contact-email" class="form-control" style="direction: ltr;" maxlength="100" required />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="contact-password">Şifre (Mevcut şifrenizi korumak için burayı boş bırakınız)</label>
                                            <input type="password" asp-for="Password" id="contact-password" class="form-control" maxlength="100" />
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="contact-message">Adres</label>
                                            <textarea asp-for="InvoiceAddress" id="contact-message" class="form-control" style="direction: ltr;" cols="1" rows="2"></textarea>
                                        </div>
                                        <span asp-validation-for="InvoiceAddress" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="submit_crt">
                                            <input type="submit" value="Güncelle" class="update_cart" name="Submit">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="UserID"  />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var passwordInput = document.querySelector('input[name="Password"]');
        if (passwordInput) {
            passwordInput.value = '';
        }
    });
</script>

