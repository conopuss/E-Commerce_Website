@model IEnumerable<Supplier>
@{
	ViewData["Title"] = "SupplierIndex";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<p>

	<a asp-action="SupplierCreate" asp-controller="Admin" class="btn btn-success">
		YENİ MARKA
	</a>
</p>


<div class="row">
	<div class="col-md-10">
		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<div class="caption">
					MARKA LİSTESİ
				</div>

			</div>


			<div class="portlet-body">
				<div class="table-scrollable">
					<table class="table table-hover">
						<thead>
							<tr style="background-color:Grey;color:white">
								<th>
									@Html.DisplayNameFor(model => model.SupplierID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BrandName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PhotoPath)
								</th>

								<th>
									@Html.DisplayNameFor(model => model.Active)
								</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(model => item.SupplierID)
									</td>
									<td>

										<span style="font-weight: bold;font-size:18px;">@Html.DisplayFor(model => item.BrandName)</span>
									</td>

									<td>
										<img src="~/resimler/@item.PhotoPath" height="35" width="60" />
									</td>


									@if (item.Active)
									{
										<td>
											<div style="background-color:green;color:white;display:inline-block;padding:6px;">
												<label style="font-weight: bold">Aktif</label>
											</div>
										</td>
									}
									else
									{
										<td>
											<div style="background-color:red;color:white;display:inline-block;padding:6px;">
												<label style="font-weight: bold">Pasif</label>
											</div>
										</td>
									}
									<td>
										<a asp-action="SupplierEdit" asp-route-id="@item.SupplierID" class="label label-info">Düzelt</a>
										<a asp-action="SupplierDetails" asp-route-id="@item.SupplierID" class="label label-warning">Detay</a>
										<a asp-action="SupplierDelete" asp-route-id="@item.SupplierID" class="label label-danger">SİL</a>
									</td>


									@*  turner if
								<td class="@(item.Active ? "AKTİF" : "PASİF" )">
								@Html.DisplayFor(modelItem => item.Active)
								</td>
								*@

								</tr>

							}

						</tbody>
					</table>
				</div>
			</div>


		</div>
		<!-- END SAMPLE TABLE PORTLET-->
	</div>
</div>



